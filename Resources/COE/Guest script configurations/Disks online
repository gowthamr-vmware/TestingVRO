#[#deleteResourceAfterRun#=#boolean#true#+#scriptWorkingDirectory#=#string##+#scriptContent#=#string#Get-Disk |

Where partitionstyle -eq 'raw' |

Initialize-Disk -PartitionStyle MBR -PassThru |

New-Partition -AssignDriveLetter -UseMaximumSize |

Format-Volume -FileSystem NTFS -NewFileSystemLabel "Drive" -Confirm:$false#+#scriptRefreshTime#=#number#15.0#+#scriptType#=#string#powershell#+#resourceSearchReplace#=#boolean#false#+#scriptInteractiveSession#=#boolean#false#+#scriptTimeOut#=#number#120.0#+#copyResource#=#boolean#false#]#